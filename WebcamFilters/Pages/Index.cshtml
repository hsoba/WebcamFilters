@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Webcam Filters</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="style.css" />
</head>

<body>
    <div class="text-center">
        Demos of live video, screenshots, and filters.
    </div>

    <br />

    <div class="container text-center mb-5">
        <button class="btn btn-success" id="capture">CAPTURE</button>
    </div>

    <div class="container-fluid">
        <div class="row justify-content-md-center">
            <div class="col-md-auto">
                <video autoplay="" id="video" width="500" height="375"></video>
            </div>
            <div class="col-md-auto align-self-center">
                <div class="btn-group-vertical justify-content-md-center">
                    <button class="btn btn-outline-success" id="blur">BLUR</button>
                    <button class="btn btn-outline-success" id="brightness">BRIGHTNESS</button>
                    <button class="btn btn-outline-success" id="contrast">CONTRAST</button>
                    <button class="btn btn-outline-success" id="invert">INVERT</button>
                    <button class="btn btn-outline-success" id="saturate">SATURATE</button>
                    <button class="btn btn-outline-success" id="sepia">SEPIA</button>
                </div>
            </div>
            <div class="col-md-auto">
                <canvas id="canvas" width="500" height="375"></canvas>
            </div>
        </div>
    </div>

    <script src="~/js/site.js"></script>
</body>
</html>